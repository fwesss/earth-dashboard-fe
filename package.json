{
  "name": "earth-dashboard",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "react-scripts build",
    "eject": "react-scripts eject",
    "format": "yarn run prettier --write --ignore-path .gitignore",
    "lint": "eslint --ignore-path .gitignore --ext .js,.jsx .",
    "lint:fix": "eslint --ignore-path .gitignore --ext .js,.jsx . --fix",
    "prettier": "prettier \"**/*.+(js|jsx|json|md)\"",
    "start": "react-scripts start",
    "test": "react-scripts test --env=jest-environment-jsdom-sixteen",
    "test:CI": "CI=true yarn run test --coverage --env=jest-environment-jsdom-sixteen --watchAll=false || true",
    "test:coverage": "yarn run test --coverage --env=jest-environment-jsdom-sixteen --watchAll=false",
    "validate": "npm-run-all --parallel format lint:fix build test:coverage"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn run validate"
    }
  },
  "lint-staged": {
    "**/*.+(js|jsx|json|md)": [
      "yarn run format"
    ],
    "*.+(js|jsx)": [
      "yarn run lint:fix"
    ],
    "package.json": [
      "sort-package-json"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "jest": {
    "collectCoverageFrom": [
      "**/*.{js,jsx}",
      "!**/node_modules/**",
      "!**/vendor/**",
      "!**/__tests__/**"
    ]
  },
  "dependencies": {
    "@loadable/component": "^5.12.0",
    "@material-ui/core": "^4.9.11",
    "@material-ui/icons": "^4.9.1",
    "@reduxjs/toolkit": "^1.3.4",
    "@testing-library/jest-dom": "^5.5.0",
    "@testing-library/react": "^10.0.2",
    "@testing-library/user-event": "^10.0.2",
    "axios": "^0.19.2",
    "clsx": "^1.1.1",
    "d3": "^5.16.0",
    "date-fns": "^2.13.0",
    "geojson": "^0.5.0",
    "mapbox-gl": "^1.9.1",
    "moment": "^2.26.0",
    "react": "^16.13.1",
    "react-cool-img": "^1.1.5",
    "react-dom": "^16.13.1",
    "react-ga": "^2.7.0",
    "react-globe.gl": "^2.8.2",
    "react-redux": "^7.2.0",
    "react-router": "^5.2.0",
    "react-router-dom": "^5.2.0",
    "react-scripts": "^3.4.1",
    "resize-observer-polyfill": "^1.5.1",
    "victory": "^34.2.2"
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/d3": "^5.7.2",
    "@types/date-fns": "^2.6.0",
    "@types/geojson": "^7946.0.7",
    "@types/mapbox-gl": "^1.9.0",
    "@types/react-redux": "^7.1.7",
    "@types/redux-mock-store": "^1.0.2",
    "@types/redux-thunk": "^2.1.0",
    "@types/victory": "^33.1.4",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-jest-formatting": "^1.2.0",
    "eslint-plugin-json-format": "^2.0.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-optimize-regex": "^1.1.7",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^3.0.0",
    "eslint-plugin-testing-library": "^3.0.4",
    "husky": "^4.2.5",
    "jest-environment-jsdom-sixteen": "^1.0.3",
    "lint-staged": "^10.1.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.4",
    "redux-mock-store": "^1.5.4",
    "redux-thunk": "^2.3.0",
    "sort-package-json": "^1.42.0"
  }
}
